{
  "manifest_version": 2,
  "name": "Sustainable Alternatives Finder",
  "version": "1.0",
  "description": "Analyzes the screen content and suggests sustainable alternatives using Gemini AI.",
  "action": {},
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["./dist/background.bundle.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  
}
